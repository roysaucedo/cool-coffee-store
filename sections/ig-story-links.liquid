<style>

  .ig-story-section-ctr {
    padding: 20px 0px 20px 10px;
    display: flex;
    overflow-x: scroll;
    -ms-overflow-style: none; /* for Internet Explorer, Edge */
    scrollbar-width: none; /* for Firefox */
  }
  .ig-story-section-ctr::-webkit-scrollbar {
    display: none; /* for Chrome, Safari, and Opera */
  }
  .story-div {
    text-align: center;
    margin-right: 15px;
  }
  .story-img {
    width: 50px;
    height: auto;
  }
  .story-collection-title {
    line-height: 15px;
    margin-block-start: 0;
    margin-block-end: 0;
    font-size: 12px;
  }
  .story-link {
    text-decoration: none;
    color: black;
  }

  @media only screen and (min-width: 750px) {
    /* For desktop: */
    .mobile-only-section {
      display: none;
    }
  }
</style>

<div class="mobile-only-section">
  <div class="ig-story-section-ctr">
    {% for block in section.blocks %}
      <div class="story-div">
        <a href="{{ block.settings.collection_link }}" class="story-link">
          <img
            src="{{ block.settings.collection_img | img_url: 'small'}}"
            alt=""
            loading="lazy"
            width="100"
            height="100"
            class="story-img">
          <p class="story-collection-title">{{ block.settings.collection_title }}</p>

        </a>

      </div>

    {% endfor %}
  </div>

</div>


{% schema %}
  {
    "name": "Story Collection Gallery",
    "blocks": [
      {
        "type": "story",
        "name": "Collection",
        "settings": [
          {
            "type": "url",
            "id": "collection_link",
            "label": "Collection Link"
          },
          {
            "type": "image_picker",
            "id": "collection_img",
            "label": "Collection Image"
          },
          {
            "type": "text",
            "id": "collection_title",
            "label": "Collection Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Story Collection Gallery"
      }
    ]
  }
{% endschema %}